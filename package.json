{
  "name": "@philippb/env-secret-guard",
  "version": "0.1.0",
  "description": "Prevent committing secrets by scanning files for values found in .env files.",
  "license": "MIT",
  "author": "Philipp",
  "type": "commonjs",
  "bin": {
    "secret-scan": "dist/cli.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/cli.ts",
    "docs": "tsx scripts/generate-docs.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "fast-glob": "^3.3.2",
    "picocolors": "^1.1.0",
    "picomatch": "^2.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "tsup": "^8.3.6",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4",
    "vitest": "^2.1.8"
  }
}
